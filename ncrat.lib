/*---------------------------------------------------------/

  Get a representation of given rational function.

/---------------------------------------------------------*/

proc ncrepGet(ncrat f) {
  ncrep q;

  // switch on f.kind
  if (f.kind == "Const") {
    q = ncrepConst(f.expr[1]);
    return (q);
  }

  if (f.kind == "Var") {
    string s = "poly p = " + f.expr[1] + ";";
    execute(s);
    q = ncrepVar(p);
    return (q);
  }

  if (f.kind == "Add") {
    q = ncrepAdd(ncrepGet(f.expr[1]), ncrepGet(f.expr[2]));
    return (q);
  }

  if (f.kind == "Sub") {
    q = ncrepSub(ncrepGet(f.expr[1]), ncrepGet(f.expr[2]));
    return (q);
  }

  if (f.kind == "Mult") {
    // First factor is a constant
    if (f.expr[1].kind == "Const") {
      q = ncrepGet(f.expr[2]);
      q.mat = q.mat / f.expr[1].expr[1];
      return (q);
    }

    // Second factor is a constant
    if (f.expr[2].kind == "Const") {
      q = ncrepGet(f.expr[1]);
      q.mat = q.mat / f.expr[2].expr[1];
      return (q);
    }

    // No constant factors
    q = ncrepMult(ncrepGet(f.expr[1]), ncrepGet(f.expr[2]));
    return (q);
  }

  if (f.kind == "Inv") {
    q = ncrepInv(ncrepGet(f.expr[1]));
    return (q);
  }

  if (f.kind == "Tp") {
    q = ncrepTp(ncrepGet(f.expr[1]));
    return (q);
  }
}

